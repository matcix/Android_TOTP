    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/agreementFragment"
        android:name="net.matcix.totp.ui.AgreementFragment"
        android:label="AgreementFragment">
        <action
            android:id="@+id/action_agreement_to_list"
            app:destination="@id/listFragment"
            app:popUpTo="@id/agreementFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/listFragment"
        android:name="net.matcix.totp.ui.ListFragment"
        android:label="列表" />

    <fragment
        android:id="@+id/addFragment"
        android:name="net.matcix.totp.ui.AddFragment"
